@inject Microsoft.Extensions.Options.IOptions<PersonaliseOptions> opt
@model MartinKRC2.ViewModels.SpeakingViewModels.IndexViewModel

@{
    ViewData["Title"] = "speaking";
}

<div class="jumbotron jumbotron-speaking">
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <p>I speak at events of all sizes, it's pretty much my job.</p>
        <p>Conferences, meet-ups, user groups, events.</p>
    </div>
</div>

<div class="container-fluid background-three">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>I'll come to your event</h2>
                <p>I speak at events such as conferences, meet-ups, user groups, Microsoft events etc.</p>
                <p>If you want me to come to your event, please <a href="mailto:@(opt.Value.EmailAddress)?Subject=Enquiry%20from%20@(opt.Value.ShortName).me">email me</a> or <a href="@opt.Value.TwitterHome">tweet me</a> and we can sort the details.</p>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid background-two">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>My Talks</h2>
                <p>Here are some of my past talks and also a few topics that I’m working on at the moment</p>
                <ul>
                    @foreach (var talk in Model.Talks)
                    {
                        <li><a href="/speaking/@talk.Url.ToLower()" title="@talk.Description" >@talk.Title</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid background-one">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>My Bio</h2>
                <p>Here is my bio in various formats:</p>
                <ul>
                    <li><strong>Third Person</strong>: Pete D is a technical evangelist for Microsoft based in the UK. He started out in 3d graphics and following a few years working on apps and web he has made a comeback with the resurgence of VR/AR/MR technologies.</li>
                    <li><strong>First Person</strong>: I am a Technical Evangelist at Microsoft with a software engineering background in 3d graphics, web and mobile development. These days often found writing code but otherwise talking about it.</li>
                    <li><strong>Short</strong>: Pete D works for Microsoft as an evangelist. He's into AR/VR/MR.</li>
                </ul>

                <p>A few mug shots you can use to advertise your event</p>
                <div class="row">
                    <div class="col-md-3">
                        <a href="~/images/Profile1.jpg" download><img src="~/images/Profile1.jpg" class="img-responsive profile-photo" alt="Pete D profile picture 1"></a>
                    </div>
                    <div class="col-md-3">
                        <a href="~/images/Profile2.jpg" download><img src="~/images/Profile2.jpg" class="img-responsive profile-photo" alt="Pete D profile picture 2"></a>
                    </div>
                    <div class="col-md-3">
                        <a href="~/images/Profile4.jpg" download><img src="~/images/Profile4.jpg" class="img-responsive profile-photo" alt="Pete D profile picture 3"></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
